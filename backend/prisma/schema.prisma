generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  email String @unique
  FullName String
  password String 
  avatar String?
  posts Post[]
  likedBy PostLiked[] 

}

model Post{
  id String @id @default(uuid())
  title String
  content String 
  description String @default("Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed lacinia massa in magna suscipit porttitor. Proin ullamcorper posuere diam, ac blandit erat porttitor at. Sed lacus leo.")
  postImage String @default("")
  published Boolean @default(false)
  like Int @default(0)
  createdAt DateTime @default(now())
  author User @relation(fields: [authorId] , references: [id])
  likedBy PostLiked[] 
  authorId String
}

model PostLiked {
  authorId String
  postId String
  isLiked Boolean @default(false)
  post Post @relation(references: [id] , fields: [postId])
  author User @relation(references: [id] , fields: [authorId])

  @@id([authorId , postId])

}
